{
  "name": "astro-tailwind-blog",
  "version": "1.0.0",
  "type": "module",
  "socialImage": "/social.png",
  "scripts": {
    "dev": "PUBLIC_SITE_URL=http://localhost:4321 astro dev",
    "build": "export PUBLIC_SITE_URL=http://chuckconway.com && npm run prebuild:translate && node scripts/increment-build.cjs && astro build",
    "prebuild:translate": "node scripts/translate.cjs",
    "preview": "astro preview",
    "e2e": "PUBLIC_SITE_URL=http://localhost:4321 playwright test",
    "e2e:headed": "PUBLIC_SITE_URL=http://localhost:4321 playwright test --headed",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.astro",
    "lint:fix": "npm run lint -- --fix",
    "lint:styles": "node scripts/check-astro-inline-style.cjs",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "editor": "tsx editor/index.ts",
    "test": "npm run lint:styles && vitest run",
    "test:watch": "vitest",
    "deploy": "npm run build && bash scripts/deploy.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@astrojs/check": "^0.9.4",
    "@astrojs/rss": "4.0.12",
    "@fontsource/inter": "5.2.6",
    "@fortawesome/fontawesome-svg-core": "^7.0.0",
    "@fortawesome/free-regular-svg-icons": "^7.0.0",
    "@fortawesome/free-solid-svg-icons": "^7.0.0",
    "@fortawesome/react-fontawesome": "^0.2.5",
    "astro": "5.13.2",
    "dotenv": "17.2.1",
    "express": "^5.1.0",
    "fuse.js": "7.1.0",
    "medium-zoom": "^1.1.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "reading-time": "^1.5.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/react": "4.3.0",
    "@astrojs/sitemap": "3.5.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-astro": "1.3.1",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.3.0",
    "globby": "^14.1.0",
    "gray-matter": "^4.0.3",
    "image-size": "^2.0.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^26.1.0",
    "katex": "^0.16.22",
    "mermaid": "^11.9.0",
    "morgan": "^1.10.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.14",
    "react-vega": "^7.7.1",
    "rehype-img-size": "^1.0.1",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "remark-mermaidjs": "^7.0.0",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "vega": "^5.33.0",
    "vega-embed": "^6.26.0",
    "vega-lite": "^5.17.0",
    "vitest": "^3.2.4"
  }
}
