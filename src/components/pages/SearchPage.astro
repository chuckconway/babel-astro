---
import Layout from "../../layouts/Layout.astro";
import SearchIsland from "../SearchIsland";
import { t } from "../../i18n";
import { getSearchItemsForLang } from "../../services/SearchService";
import type { Post as SearchPost } from "../PostListReact";

interface Props {
  lang: string;
}

const { lang } = Astro.props;
const initial: SearchPost[] = [];
---

<Layout title={t('page.search', lang)}>
  <div class="prose prose-lg mx-auto p-4 dark:prose-invert text-content">
    <h1 class="not-prose page-title mb-4 text-content">
      {t('search.title', lang)}
    </h1>
    <div class="not-prose">
      <SearchIsland client:load autoFocus lang={lang} initial={initial} />
    </div>
  </div>
</Layout> 